@startuml
	!startsub person
	object "<u>X:Person</u>" as X #ffffff {
           personName = {
           \t firstNames = "Urlike"
           \t familyNames = "Reisach"
           } ^^ PersonName
           orcid_id = "https://orcid.org/0000-0003-3432-8728" ^^ ORCID_iD_Type
           Affiliation_Statement = [Affiliation 1] ^^ List<Affiliation_Statement>
        }
    !endsub

